{
  "main": "listen.js",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.2",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
